<project name="Class.js" default="build">
	
	<target name="build" description="Builds the source file with its license header.">
		<java jar="vendor/webappbuilder/WebAppBuilder.jar" fork="true" failonerror="true">
			<arg line="--projectFile buildSource.json" />
		</java>
	</target>
	
	
	<target name="doc">
		<exec executable="${basedir}/vendor/jsduck/jsduck-4.4.1.exe" failonerror="true">
			<arg value="--output=docs" />
			<arg value="--title=Class.js API Docs" />
			<arg value="src/" />
		</exec>
	</target>
	
</project>